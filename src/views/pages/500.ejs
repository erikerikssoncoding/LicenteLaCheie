<%- include('../partials/head', { title, description, request }) %>
<%- include('../partials/header') %>
<section class="py-5 text-center">
  <div class="container">
    <h1 class="display-6">Eroare interna</h1>
    <p class="lead">A aparut o problema neasteptata. Echipa noastra tehnica a fost notificata.</p>
    <% if (debugDetails) { %>
    <div class="alert alert-warning text-start mt-4" role="alert">
      <h2 class="h6 fw-semibold">Detalii tehnice</h2>
      <p class="mb-1"><strong>Mesaj:</strong> <%= debugDetails.message %></p>
      <pre class="small mb-0"><%= debugDetails.stack %></pre>
    </div>
    <% } %>
    <a class="btn btn-primary" href="/">Reveniti la pagina principala</a>
  </div>
</section>
<%- include('../partials/footer') %>
