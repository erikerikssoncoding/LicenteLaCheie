          <input class="form-control" type="number" step="0.01" min="0" id="counterAmount" name="amount" required />
        </div>
        <button class="btn btn-outline-primary" type="submit">Trimite contraoferta</button>
      </form>
    </div>
    <% } %>
    <% } %>
