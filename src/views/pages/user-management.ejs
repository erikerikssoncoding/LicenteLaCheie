<%- include('../partials/head', { title, description, request }) %>
<%- include('../partials/header') %>
<section class="py-5">
  <div class="container">
    <div class="d-flex flex-column flex-lg-row justify-content-between align-items-lg-center gap-3 mb-4">
      <div>
        <h1 class="h3 mb-0">Gestionare utilizatori</h1>
        <p class="text-muted mb-0">Gestioneaza conturile clientilor si ale echipei.</p>
      </div>
      <form class="d-flex gap-2" method="get" action="/cont/utilizatori">
        <input class="form-control" type="search" name="q" value="<%= filters.q || '' %>" placeholder="Cauta dupa nume sau email" />
        <select class="form-select" name="role">
          <option value="all" <%= filters.role === 'all' ? 'selected' : '' %>>Toate rolurile</option>
          <option value="client" <%= filters.role === 'client' ? 'selected' : '' %>>Clienti</option>
          <option value="redactor" <%= filters.role === 'redactor' ? 'selected' : '' %>>Redactori</option>
          <option value="admin" <%= filters.role === 'admin' ? 'selected' : '' %>>Admin</option>
          <option value="superadmin" <%= filters.role === 'superadmin' ? 'selected' : '' %>>Superadmin</option>
        </select>
        <select class="form-select" name="status">
          <option value="all" <%= filters.status === 'all' ? 'selected' : '' %>>Toti</option>
          <option value="active" <%= filters.status === 'active' ? 'selected' : '' %>>Activ</option>
          <option value="inactive" <%= filters.status === 'inactive' ? 'selected' : '' %>>Inactiv</option>
        </select>
        <button class="btn btn-outline-primary" type="submit">Filtreaza</button>
      </form>
    </div>

    <% if (flashMessage) { %>
    <div class="alert alert-success"><%= flashMessage %></div>
    <% } %>
    <% if (errorMessage) { %>
    <div class="alert alert-danger"><%= errorMessage %></div>
    <% } %>

    <div class="row g-4">
      <div class="col-lg-4">
        <div class="card shadow-sm h-100">
          <div class="card-body">
            <h2 class="h5">Creeaza cont</h2>
            <form action="/cont/utilizatori" method="post" class="vstack gap-3">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
              <div>
                <label class="form-label" for="staffName">Nume complet</label>
                <input class="form-control" id="staffName" name="fullName" required />
              </div>
              <div>
                <label class="form-label" for="staffEmail">Email</label>
                <input class="form-control" id="staffEmail" type="email" name="email" required />
              </div>
              <div>
                <label class="form-label" for="staffPhone">Telefon</label>
                <input class="form-control" id="staffPhone" name="phone" />
              </div>
              <div>
                <label class="form-label" for="staffRole">Rol</label>
                <select class="form-select" id="staffRole" name="role" required>
                  <option value="client">Client</option>
                  <option value="redactor">Redactor</option>
                  <option value="admin">Admin</option>
                  <% if (currentUser.role === 'superadmin') { %>
                  <option value="superadmin">Superadmin</option>
                  <% } %>
                </select>
              </div>
              <button class="btn btn-primary" type="submit">Creeaza</button>
            </form>
            <% if (generatedCredentials) { %>
            <div class="alert alert-info mt-3">
              <p class="mb-1">Cont creat pentru <strong><%= generatedCredentials.email %></strong>.</p>
              <p class="mb-0">Parola temporara: <strong><%= generatedCredentials.password %></strong></p>
            </div>
            <% } %>
          </div>
        </div>
      </div>
      <div class="col-lg-8">
        <div class="card shadow-sm">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-3">
              <h2 class="h5 mb-0">Utilizatori</h2>
              <span class="text-muted small">Total: <%= users.length %></span>
            </div>
            <div class="table-responsive">
              <table class="table align-middle">
                <thead>
                  <tr>
                    <th>Nume</th>
                    <th>Email</th>
                    <th>Rol</th>
                    <th>Status</th>
                    <th class="text-end">Actiuni</th>
                  </tr>
                </thead>
                <% const roleLabelMap = { client: 'Client', redactor: 'Redactor', admin: 'Admin', superadmin: 'Superadmin' }; %>
                <tbody>
                  <% if (users.length === 0) { %>
                  <tr>
                    <td colspan="5" class="text-center text-muted">Nu exista utilizatori pentru filtrele selectate.</td>
                  </tr>
                  <% } else { %>
                  <% users.forEach((user) => { %>
                  <tr>
                    <td>
                      <div class="fw-semibold"><%= user.full_name %></div>
                      <div class="small text-muted">Creat la <%= user.created_at.toISOString ? user.created_at.toISOString().slice(0,10) : user.created_at %></div>
                    </td>
                    <td><%= user.email %></td>
                    <td>
                      <span class="badge bg-light text-dark border"><%= roleLabelMap[user.role] || user.role.toUpperCase() %></span>
                    </td>
                    <td>
                      <span class="badge <%= user.is_active ? 'bg-success' : 'bg-secondary' %>"><%= user.is_active ? 'Activ' : 'Inactiv' %></span>
                      <% if (user.must_reset_password) { %>
                      <span class="badge bg-info text-dark ms-1">Resetare obligatorie</span>
                      <% } %>
                      <% if (user.is_protected) { %>
                      <span class="badge bg-warning text-dark ms-1">Protejat</span>
                      <% } %>
                    </td>
                    <td class="text-end">
                      <div class="d-flex flex-column flex-sm-row justify-content-end gap-2">
                        <a
                          class="btn btn-sm btn-outline-primary <%= user.id === currentUser.id || user.is_protected ? 'disabled' : '' %>"
                          href="<%= user.id === currentUser.id || user.is_protected ? '#' : `/cont/utilizatori/${user.id}` %>"
                          aria-disabled="<%= user.id === currentUser.id || user.is_protected ? 'true' : 'false' %>"
                        >
                          Editeaza
                        </a>
                        <form action="/cont/utilizatori/<%= user.id %>/status" method="post" class="d-inline">
                          <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                          <input type="hidden" name="returnTo" value="/cont/utilizatori" />
                          <input type="hidden" name="isActive" value="<%= user.is_active ? '0' : '1' %>" />
                          <button
                            class="btn btn-sm <%= user.is_active ? 'btn-outline-danger' : 'btn-outline-success' %>"
                            type="submit"
                            <%= user.id === currentUser.id || user.is_protected ? 'disabled' : '' %>
                          >
                            <%= user.is_active ? 'Dezactiveaza' : 'Activeaza' %>
                          </button>
                        </form>
                      </div>
                    </td>
                  </tr>
                  <% }) %>
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<%- include('../partials/footer') %>
