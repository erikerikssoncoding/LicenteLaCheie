<%- include('../partials/head', { title, description, request }) %>
<%- include('../partials/header') %>
<section class="py-5">
  <div class="container">
    <% const licenseRestricted = Boolean(typeof isLicenseRestricted !== 'undefined' ? isLicenseRestricted : false); %>
    <% const staffLinksDisabled = licenseRestricted && currentUser.role !== 'superadmin'; %>
    <div class="d-flex flex-column flex-lg-row justify-content-between align-items-lg-center gap-3 mb-4">
      <div>
        <h1 class="h3 mb-1">Gestionare tichete</h1>
        <p class="text-muted mb-0">Monitorizează rapid solicitările clienților și actualizează statusurile.</p>
      </div>
      <form class="d-flex flex-wrap gap-2" action="/cont/tichete" method="get">
        <select class="form-select" name="status">
          <option value="all" <%= filters.status === 'all' ? 'selected' : '' %>>Toate statusurile</option>
          <option value="deschis" <%= filters.status === 'deschis' ? 'selected' : '' %>>Deschis</option>
          <option value="in-analiza" <%= filters.status === 'in-analiza' ? 'selected' : '' %>>În analiză</option>
          <option value="rezolvat" <%= filters.status === 'rezolvat' ? 'selected' : '' %>>Rezolvat</option>
        </select>
        <select class="form-select" name="kind">
          <option value="all" <%= filters.kind === 'all' ? 'selected' : '' %>>Toate tipurile</option>
          <option value="support" <%= filters.kind === 'support' ? 'selected' : '' %>>Suport</option>
          <option value="offer" <%= filters.kind === 'offer' ? 'selected' : '' %>>Oferta</option>
        </select>
        <button class="btn btn-outline-primary" type="submit">Filtrează</button>
      </form>
    </div>

    <% if (feedback && feedback.success) { %>
    <div class="alert alert-success" role="alert"><%= feedback.success %></div>
    <% } %>
    <% if (feedback && feedback.error) { %>
    <div class="alert alert-danger" role="alert"><%= feedback.error %></div>
    <% } %>

    <% if (licenseRestricted) { %>
    <div class="alert alert-warning" role="alert">
      Accesul la funcțiile de gestionare este limitat deoarece licența platformei a expirat. Poți vizualiza tichetele, dar nu le poți deschide sau actualiza până la reînnoirea licenței.
    </div>
    <% } %>

    <% const syncState = ticketInboxSync || {}; %>
    <% const isSyncOnline = Boolean(syncState.configured && syncState.timerActive); %>
    <% const formatDateTime = (value) => {
      if (!value) return null;

      const date = value instanceof Date ? value : new Date(value);
      if (Number.isNaN(date.getTime())) return null;

      return new Intl.DateTimeFormat('sv-SE', {
        timeZone: 'Europe/Bucharest',
        year: 'numeric',
        month: '2-digit',
        day: '2-digit',
        hour: '2-digit',
        minute: '2-digit',
        hour12: false
      }).format(date);
    }; %>
    <% const lastRun = formatDateTime(syncState.lastRunAt) || 'nu a rulat încă'; %>
    <% if (currentUser.role === 'superadmin') { %>
    <div class="alert alert-info d-flex flex-column flex-lg-row gap-3 align-items-lg-center justify-content-lg-between">
      <div>
        <div class="d-flex align-items-center gap-2 mb-1">
          <span class="fw-semibold">Sincronizare răspunsuri pe email</span>
          <span class="badge <%= isSyncOnline ? 'bg-success' : 'bg-danger' %>"><%= isSyncOnline ? 'Online' : 'Offline' %></span>
        </div>
        <p class="small mb-1">Ultima rulare: <strong><%= lastRun %></strong></p>
        <% if (!syncState.configured) { %>
        <p class="small text-danger mb-0">Configurația IMAP lipsește (MAIL_IMAP_HOST, MAIL_USER sau MAIL_PASSWORD).</p>
        <% } else if (syncState.inProgress) { %>
        <p class="small mb-0">O sincronizare este în desfășurare.</p>
        <% } else if (syncState.lastError) { %>
        <p class="small text-warning mb-0">Ultima eroare raportată: <%= syncState.lastError %></p>
        <% } else { %>
        <p class="small mb-0">Sistemul de sincronizare rulează la fiecare <%= Math.round(syncState.intervalMs / 1000) %> secunde.</p>
        <% } %>
      </div>
      <div class="d-flex align-items-center gap-2">
        <form action="/cont/tichete/sincronizare-manuala" method="post">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
          <button class="btn btn-outline-primary" type="submit" <%= (!syncState.configured || syncState.inProgress) ? 'disabled' : '' %>>
            Actualizare manuală
          </button>
        </form>
        <% if (isSyncOnline) { %>
        <form action="/cont/tichete/sincronizare-oprire" method="post">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
          <button class="btn btn-outline-danger" type="submit" <%= syncState.inProgress ? '' : 'disabled' %>>Oprește sincronizarea</button>
        </form>
        <% } else { %>
        <form action="/cont/tichete/sincronizare-reactivare" method="post">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
          <button class="btn btn-outline-success" type="submit" <%= (!syncState.configured || syncState.inProgress) ? 'disabled' : '' %>>Reactivează sincronizarea</button>
        </form>
        <% } %>
      </div>
    </div>
    <div class="card shadow-sm mb-4" id="mail-previzualizare">
      <div class="card-body">
        <div class="d-flex flex-column flex-lg-row justify-content-between gap-3 mb-3">
          <div>
            <h2 class="h6 mb-1">Previzualizare email (IMAP)</h2>
            <p class="small text-muted mb-0">Ultimele 5 mesaje din inbox și din folderul de trimise.</p>
          </div>
          <form action="/cont/tichete/mail-previzualizare" method="post" class="d-flex align-items-center gap-2">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
            <button class="btn btn-outline-secondary" type="submit">Afișează ultimele mesaje</button>
          </form>
        </div>
        <% if (mailPreview) { %>
        <% if (mailPreview.errors && mailPreview.errors.length) { %>
        <div class="alert alert-warning" role="alert">
          <div class="fw-semibold mb-1">Au apărut erori la citirea mesajelor:</div>
          <ul class="mb-0 ps-3">
            <% mailPreview.errors.forEach((error) => { %>
            <li class="small"><%= error %></li>
            <% }) %>
          </ul>
        </div>
        <% } %>
        <div class="row g-3">
          <div class="col-lg-6">
            <h3 class="h6 mb-2">Inbox</h3>
            <% if (mailPreview.inbox && mailPreview.inbox.length) { %>
            <div class="list-group list-group-flush border rounded-3">
              <% mailPreview.inbox.slice(0, 5).forEach((message) => { %>
              <div class="list-group-item">
                <div class="fw-semibold text-truncate"><%= message.subject %></div>
                <div class="small text-muted text-truncate">De la: <%= message.from || 'Necunoscut' %></div>
                <% const inboxDateLabel =
                  message.formattedDate ||
                  (message.date
                    ? new Date(message.date).toLocaleString('ro-RO', {
                        timeZone: 'Europe/Bucharest',
                        dateStyle: 'short',
                        timeStyle: 'short'
                      })
                    : null); %>
                <div class="small text-muted">Data: <%= inboxDateLabel || 'N/A' %></div>
              </div>
              <% }) %>
            </div>
            <% } else { %>
            <p class="text-muted mb-0">Nu s-au găsit mesaje recente în inbox.</p>
            <% } %>
          </div>
          <div class="col-lg-6">
            <h3 class="h6 mb-2">Trimise</h3>
            <% if (mailPreview.sent && mailPreview.sent.length) { %>
            <div class="list-group list-group-flush border rounded-3">
              <% mailPreview.sent.slice(0, 5).forEach((message) => { %>
              <div class="list-group-item">
                <div class="fw-semibold text-truncate"><%= message.subject %></div>
                <div class="small text-muted text-truncate">Către: <%= message.to || 'Necunoscut' %></div>
                <% const sentDateLabel =
                  message.formattedDate ||
                  (message.date
                    ? new Date(message.date).toLocaleString('ro-RO', {
                        timeZone: 'Europe/Bucharest',
                        dateStyle: 'short',
                        timeStyle: 'short'
                      })
                    : null); %>
                <div class="small text-muted">Data: <%= sentDateLabel || 'N/A' %></div>
              </div>
              <% }) %>
            </div>
            <% } else { %>
            <p class="text-muted mb-0">Nu s-au găsit mesaje recente în folderul de trimise.</p>
            <% } %>
          </div>
        </div>
        <% } else { %>
        <p class="text-muted mb-0">Apasă pe buton pentru a încărca ultimele mesaje.</p>
        <% } %>
      </div>
    </div>
    <% } %>

    <% const kindLabels = { support: 'Suport', offer: 'Ofertă' }; %>

    <div class="card shadow-sm">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-3">
          <h2 class="h5 mb-0">Lista tichete</h2>
          <span class="text-muted small">Total: <%= tickets.length %></span>
        </div>
        <div class="table-responsive">
          <table class="table align-middle">
            <thead>
              <tr>
                <th>Cod</th>
                <th>Subiect</th>
                <th>Tip</th>
                <th>Status</th>
                <th>Creat la</th>
                <th class="text-end">Acțiuni</th>
              </tr>
            </thead>
            <tbody>
              <% if (tickets.length === 0) { %>
              <tr>
                <td colspan="6" class="text-center text-muted">Nu există tichete pentru filtrele selectate.</td>
              </tr>
              <% } else { %>
              <% tickets.forEach((ticket) => { %>
              <tr>
                <td><%= ticket.display_code %></td>
                <td>
                  <div class="fw-semibold"><%= ticket.subject %></div>
                  <div class="small text-muted">
                    <%= ticket.author_name ? `Autor: ${ticket.author_name}` : 'Autor necunoscut' %>
                    <% if (ticket.project_title) { %>
                    • Proiect: <%= ticket.project_title %>
                    <% } %>
                  </div>
                </td>
                <td><span class="badge bg-light text-dark"><%= kindLabels[ticket.kind] || ticket.kind %></span></td>
                <td>
                  <% const isMerged = Boolean(ticket.merged_into_ticket_id); %>
                  <% const statusLabel = ticket.status === 'rezolvat' && isMerged ? 'rezolvat (merged)' : ticket.status; %>
                  <% if (isMerged) { %>
                  <div class="d-flex flex-column gap-1">
                    <span class="badge bg-light text-dark text-uppercase align-self-start"><%= statusLabel %></span>
                    <p class="text-muted small mb-0">
                      Fuzionat în
                      <a href="/cont/tichete/<%= ticket.merged_into_ticket_id %>">#<%= ticket.merged_into_display_code || ticket.merged_into_ticket_id %></a>
                    </p>
                  </div>
                  <% } else { %>
                  <form action="/cont/tichete/<%= ticket.id %>/status" method="post" class="d-flex align-items-center gap-2">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                    <select class="form-select form-select-sm" name="status" <%= staffLinksDisabled ? 'disabled' : '' %>>
                      <option value="deschis" <%= ticket.status === 'deschis' ? 'selected' : '' %>>Deschis</option>
                      <option value="in-analiza" <%= ticket.status === 'in-analiza' ? 'selected' : '' %>>În analiză</option>
                      <option value="rezolvat" <%= ticket.status === 'rezolvat' ? 'selected' : '' %>>Rezolvat</option>
                    </select>
                    <button class="btn btn-sm btn-outline-secondary" type="submit" <%= staffLinksDisabled ? 'disabled' : '' %>>Actualizează</button>
                  </form>
                  <% } %>
                </td>
                <td><%= ticket.created_at.toISOString ? ticket.created_at.toISOString().slice(0,10) : ticket.created_at %></td>
                <td class="text-end">
                  <a
                    class="btn btn-sm btn-outline-primary <%= staffLinksDisabled ? 'disabled' : '' %>"
                    href="<%= staffLinksDisabled ? '#' : `/cont/tichete/${ticket.id}` %>"
                    <%= staffLinksDisabled ? 'tabindex="-1" aria-disabled="true"' : '' %>
                  >
                    Vezi detalii
                  </a>
                </td>
              </tr>
              <% }) %>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>
<%- include('../partials/footer') %>
