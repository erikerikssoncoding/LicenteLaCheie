<%- include('../partials/head', { title, description, request }) %>
<%- include('../partials/header') %>
<section class="py-5">
  <div class="container">
    <% const licenseRestricted = Boolean(typeof isLicenseRestricted !== 'undefined' ? isLicenseRestricted : false); %>
    <% const staffLinksDisabled = licenseRestricted && currentUser.role !== 'superadmin'; %>
    <div class="d-flex flex-column flex-lg-row justify-content-between align-items-lg-center gap-3 mb-4">
      <div>
        <h1 class="h3 mb-1">Gestionare tichete</h1>
        <p class="text-muted mb-0">Monitorizează rapid solicitările clienților și actualizează statusurile.</p>
      </div>
      <form class="d-flex flex-wrap gap-2" action="/cont/tichete" method="get">
        <select class="form-select" name="status">
          <option value="all" <%= filters.status === 'all' ? 'selected' : '' %>>Toate statusurile</option>
          <option value="deschis" <%= filters.status === 'deschis' ? 'selected' : '' %>>Deschis</option>
          <option value="in-analiza" <%= filters.status === 'in-analiza' ? 'selected' : '' %>>În analiză</option>
          <option value="rezolvat" <%= filters.status === 'rezolvat' ? 'selected' : '' %>>Rezolvat</option>
        </select>
        <select class="form-select" name="kind">
          <option value="all" <%= filters.kind === 'all' ? 'selected' : '' %>>Toate tipurile</option>
          <option value="support" <%= filters.kind === 'support' ? 'selected' : '' %>>Suport</option>
          <option value="offer" <%= filters.kind === 'offer' ? 'selected' : '' %>>Oferta</option>
        </select>
        <button class="btn btn-outline-primary" type="submit">Filtrează</button>
      </form>
    </div>

    <% if (feedback && feedback.success) { %>
    <div class="alert alert-success" role="alert"><%= feedback.success %></div>
    <% } %>
    <% if (feedback && feedback.error) { %>
    <div class="alert alert-danger" role="alert"><%= feedback.error %></div>
    <% } %>

    <% if (licenseRestricted) { %>
    <div class="alert alert-warning" role="alert">
      Accesul la funcțiile de gestionare este limitat deoarece licența platformei a expirat. Poți vizualiza tichetele, dar nu le poți deschide sau actualiza până la reînnoirea licenței.
    </div>
    <% } %>

    <% const kindLabels = { support: 'Suport', offer: 'Ofertă' }; %>

    <div class="card shadow-sm">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-3">
          <h2 class="h5 mb-0">Lista tichete</h2>
          <span class="text-muted small">Total: <%= tickets.length %></span>
        </div>
        <div class="table-responsive">
          <table class="table align-middle">
            <thead>
              <tr>
                <th>Cod</th>
                <th>Subiect</th>
                <th>Tip</th>
                <th>Status</th>
                <th>Creat la</th>
                <th class="text-end">Acțiuni</th>
              </tr>
            </thead>
            <tbody>
              <% if (tickets.length === 0) { %>
              <tr>
                <td colspan="6" class="text-center text-muted">Nu există tichete pentru filtrele selectate.</td>
              </tr>
              <% } else { %>
              <% tickets.forEach((ticket) => { %>
              <tr>
                <td><%= ticket.display_code %></td>
                <td>
                  <div class="fw-semibold"><%= ticket.subject %></div>
                  <div class="small text-muted">
                    <%= ticket.author_name ? `Autor: ${ticket.author_name}` : 'Autor necunoscut' %>
                    <% if (ticket.project_title) { %>
                    • Proiect: <%= ticket.project_title %>
                    <% } %>
                  </div>
                </td>
                <td><span class="badge bg-light text-dark"><%= kindLabels[ticket.kind] || ticket.kind %></span></td>
                <td>
                  <% const isMerged = Boolean(ticket.merged_into_ticket_id); %>
                  <% const statusLabel = ticket.status === 'rezolvat' && isMerged ? 'rezolvat (merged)' : ticket.status; %>
                  <% if (isMerged) { %>
                  <div class="d-flex flex-column gap-1">
                    <span class="badge bg-light text-dark text-uppercase align-self-start"><%= statusLabel %></span>
                    <p class="text-muted small mb-0">
                      Fuzionat în
                      <a href="/cont/tichete/<%= ticket.merged_into_ticket_id %>">#<%= ticket.merged_into_display_code || ticket.merged_into_ticket_id %></a>
                    </p>
                  </div>
                  <% } else { %>
                  <form action="/cont/tichete/<%= ticket.id %>/status" method="post" class="d-flex align-items-center gap-2">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                    <select class="form-select form-select-sm" name="status" <%= staffLinksDisabled ? 'disabled' : '' %>>
                      <option value="deschis" <%= ticket.status === 'deschis' ? 'selected' : '' %>>Deschis</option>
                      <option value="in-analiza" <%= ticket.status === 'in-analiza' ? 'selected' : '' %>>În analiză</option>
                      <option value="rezolvat" <%= ticket.status === 'rezolvat' ? 'selected' : '' %>>Rezolvat</option>
                    </select>
                    <button class="btn btn-sm btn-outline-secondary" type="submit" <%= staffLinksDisabled ? 'disabled' : '' %>>Actualizează</button>
                  </form>
                  <% } %>
                </td>
                <td><%= ticket.created_at.toISOString ? ticket.created_at.toISOString().slice(0,10) : ticket.created_at %></td>
                <td class="text-end">
                  <a
                    class="btn btn-sm btn-outline-primary <%= staffLinksDisabled ? 'disabled' : '' %>"
                    href="<%= staffLinksDisabled ? '#' : `/cont/tichete/${ticket.id}` %>"
                    <%= staffLinksDisabled ? 'tabindex="-1" aria-disabled="true"' : '' %>
                  >
                    Vezi detalii
                  </a>
                </td>
              </tr>
              <% }) %>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>
<%- include('../partials/footer') %>
