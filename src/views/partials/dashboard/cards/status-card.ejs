<div class="card shadow-sm h-100">
  <div class="card-body">
    <h2 class="h5 mb-3"><%= title %></h2>
    <% if (!statuses || statuses.length === 0) { %>
    <p class="text-muted mb-0"><%= emptyMessage %></p>
    <% } else { %>
    <div class="row g-3">
      <% statuses.forEach((status) => { %>
      <div class="col-6">
        <div class="border rounded-3 p-3 h-100 text-center">
          <div class="fw-semibold text-uppercase small"><%= status.label %></div>
          <div class="display-6"><%= status.total %></div>
        </div>
      </div>
      <% }) %>
    </div>
    <% } %>
  </div>
</div>
